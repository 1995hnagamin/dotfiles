"--- language

" C++
augroup cpp
  au Filetype cpp let g:auto_save = 0
augroup END

" Haskell
augroup vimrc
  au Filetype haskell setlocal shiftwidth=4 tabstop=4 softtabstop=4
augroup END

" PAS, PASXX
augroup vimrc
  au Filetype pasm,pasxx NeoCompleteLock
augroup END


